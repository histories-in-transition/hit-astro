---
import MsContentItem from "./MsContentItem.astro";
const { unit, showHeader } = Astro.props;
import { parseLocus, sortByLocus } from "@/lib/utils";
import DescriptionList from "../ui/DescriptionList.astro";
import DescriptionListItem from "../ui/DescriptionListItem.astro";
const label = `Kod. Einheit ${unit.number} (fols. ${unit.locus}`;
---

<DescriptionList>
	{
		showHeader ? (
			<DescriptionListItem label={label}>
				{unit.content.sort(sortByLocus).map((item) => (
					<MsContentItem item={item} />
				))}
			</DescriptionListItem>
		) : (
			<DescriptionListItem>
				{unit.content.sort(sortByLocus).map((item) => (
					<MsContentItem item={item} />
				))}
			</DescriptionListItem>
		)
	}
</DescriptionList>
