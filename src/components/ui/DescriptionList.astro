---
const { items = [] } = Astro.props;
---

<dl class="md:grid grid-cols-[1fr_5fr] px-3 text-brand-800">
	{
		items.length > 0 ? (
			items.map(({ label, value }) =>
				value ? (
					<>
						<dt class="font-semibold md:border-r border-gray-300 pr-2">{label}</dt>
						<dd class="pl-5">{value}</dd>
					</>
				) : null,
			)
		) : (
			<slot />
		)
	}
</dl>
