---
import NavLink from "./nav-link.astro";
import { Icon } from "astro-icon/components";
// Props for the component
const { prevLink, nextLink, mainLink, mainTitle, subtitle } = Astro.props;
---

<article class="mx-auto md:w-3/4 sm:w-4/5 grid grid-cols-1 p-5 pb-10 gap-y-2">
	<div class="flex justify-between gap-3 text-brandRed md:text-3xl text-xl">
		{
			prevLink && (
				<NavLink href={prevLink} class="flex items-center">
					<Icon aria-hidden="true" name="lucide:circle-chevron-left" />
					<span class="sr-only">zum vorherigen Eintrag</span>
				</NavLink>
			)
		}
		<h1 class="font-semibold py-3 text-brandRed">
			{
				mainLink ? (
					<NavLink href={mainLink} class="underline underline-offset-2">
						{mainTitle}
					</NavLink>
				) : (
					mainTitle
				)
			}
			{subtitle && <span> ({subtitle}) </span>}
		</h1>
		{
			nextLink && (
				<NavLink href={nextLink} class="flex items-center">
					<Icon aria-hidden="true" name="lucide:circle-chevron-right" />
					<span class="sr-only">zum n√§chsten Eintrag</span>
				</NavLink>
			)
		}
	</div>
	<slot />
</article>
