---
import PageLayout from "../layouts/page-layout.astro";
import "instantsearch.css/themes/satellite.css";
---

<PageLayout title="Search">
	<div class="grid mx-auto md:w-3/4 sm:w-4/5 py-4 gap-8">
		<h1 class="text-2xl font-bold text-brand-800">
			Erweiterte suche nach Manuskripteintr√§gen (MS-items):
		</h1>

		<div class="space-y-6">
			<div class="grid md:grid-cols-[1fr_3fr] gap-6">
				<!-- Search Input and Stats -->
				<div>
					<div class="bg-brand-100 p-4 rounded-sm">
						<!-- Refinements Section -->
						<h2
							class="py-2 px-6 mb-2 text-brand-800 text-center font-semibold text-lg border-b-2 border-neutral-50 uppercase tracking-wider"
						>
							Filter
						</h2>
						<aside class="">
							<div id="refinement-list-work"></div>
							<div id="refinement-list-authors"></div>
							<div id="refinement-list-manuscripts"></div>
							<div id="refinement-list-library"></div>
							<div id="refinement-list-library-place"></div>
							<div id="refinement-list-orig-date"></div>
							<div id="refinement-list-orig-place"></div>
							<div id="refinement-list-provenance"></div>
							<div id="refinement-list-hands-role"></div>
							<div id="refinement-list-hands-function"></div>
							<div id="refinement-list-scribe-type"></div>
							<div id="refinement-list-decoration"></div>
						</aside>
					</div>
				</div>

				<!-- Results Section -->
				<section class="space-y-3">
					<div class="space-y-3">
						<div id="searchbox"></div>
						<div id="current-refinements" class="text-sm text-gray-600"></div>
						<div id="clear-refinements" class="max-w-56"></div>
					</div>
					<div id="stats-container" class="text-sm text-gray-600"></div>
					<div id="hits" class="bg-white p-4 rounded-sm shadow-sm"></div>
					<div id="pagination" class="flex justify-center"></div>
				</section>
			</div>
		</div>
	</div>

	<script src="../lib/advanced-search.js"></script>
</PageLayout>
