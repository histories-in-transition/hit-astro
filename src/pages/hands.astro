---
import PageLayout from "@/layouts/page-layout.astro";
import TableHead from "@/components/table-head.astro";
import TabulatorTable from "@/components/tabulator-table.jsx";
import { handsTableConfig } from "@/lib/tabulator-table-configs.js";
import hands from "@/content/data/hands.json";

// Transform data and prepare columns for Tabulator Table
const tableData = handsTableConfig.transformData(hands);
const columns = handsTableConfig.getColumns();
const rowClickConfig = handsTableConfig.getRowClickConfig;
---

<PageLayout title="Hands">
	<TableHead
		title="HÃ¤nde"
		definition="Das schriftliche Ergebnis der Arbeit eines einzelnen Schreibers (identifiziert oder nicht) innerhalb einer Handschrift."
	>
		<TabulatorTable
			client:only="react"
			data={tableData}
			columns={columns}
			tableId="hands-table"
			options={{
				paginationSize: 25,
				responsiveLayout: "collapse",
			}}
			downloadTitle="hit_hands"
			rowClickConfig={rowClickConfig}
		/>
	</TableHead>
</PageLayout>
