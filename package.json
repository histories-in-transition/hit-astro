{
	"name": "hit-website",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"format:check": "prettier . --cache --check",
		"format:fix": "pnpm run format:check --write",
		"get-data": "pnpm tsx ./scripts/fetch-data.ts",
		"process-data": "pnpm tsx ./scripts/preprocess/preprocess-data.ts",
		"generate-tei": "node ./scripts/export/tei/generate-tei.js",
		"generate-tex": "node ./scripts/export/tex/generate-tex.js",
		"generate-index": "node ./scripts/search-index/generate-search-index.js && node ./scripts/search-index/generate-strata-index.js",
		"build": "astro build",
		"start": "astro preview",
		"astro": "astro",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.12",
		"@astrojs/check": "^0.9.6",
		"@astrojs/svelte": "^7.2.5",
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource/inter": "^5.2.8",
		"@iconify-json/lucide": "^1.2.80",
		"@tailwindcss/postcss": "^4.1.17",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@xmldom/xmldom": "github:xmldom/xmldom",
		"astro": "^5.16.5",
		"astro-icon": "^1.1.5",
		"eta": "^3.5.0",
		"fast-xml-parser": "^5.3.2",
		"html2canvas": "^1.4.1",
		"instantsearch.css": "^8.9.0",
		"instantsearch.js": "^4.85.2",
		"jspdf": "^2.5.2",
		"leaflet": "^1.9.4",
		"leaflet.markercluster": "^1.5.3",
		"lucide": "^0.452.0",
		"node-fetch": "^3.3.2",
		"pnpm": "^10.25.0",
		"sharp": "^0.33.5",
		"svelte": "^5.46.1",
		"tabulator-tables": "^6.3.1",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.21.0",
		"typesense": "^2.1.0",
		"typesense-instantsearch-adapter": "^2.9.0"
	},
	"devDependencies": {
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@types/node": "^22.19.2",
		"@types/tabulator-tables": "^6.3.0",
		"prettier": "^3.7.4",
		"prettier-plugin-astro": "^0.14.1",
		"typescript": "^5.9.3"
	}
}
